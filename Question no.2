#include <stdio.h>

int main() {
    
    //given array
    int arr[7]={1,2,3,4,5,6};

    //initiation.. 
    int n,index,i;

    //taking index value
    printf("Enter the index :");
    scanf("%d",&index);
    
    //taking the number
    printf("Enter the number :");
    scanf("%d",&n);

    //shifting the order elements one index ahead.
    for(i=6;i>index;i--){
        arr[i]=arr[i-1];
    }

    //inserting the number
    arr[index]=n;
    
    
    //printing the array
    printf("Required array: ");
    for(i=0;i<7;i++){
        printf("%d ",arr[i]);
    }
  return 0;
}
